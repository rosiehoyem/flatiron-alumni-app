
<!--Main Content-->
  <section id="content">
    <div class="container">
      
      <div class="row-fluid">
        <div class="span10">
          <h2>Flatiron Dashboard</h2>
          <p class="lead">Welcome! We're a community of former Flatiron School students.</p>
        </div>
        <div class="span2 text-right">
          <% if !current_user.attachment.blank? %> 
          <%= image_tag current_user.attachment_url(:teensy) %>
          <% else %> 
          <%= image_tag current_user.profile_image, :size => "50x50" %> <br>
          <% end %> 
          <%= link_to "edit your profile", edit_user_path(current_user) %>
      </div>
      
      <div class="row-fluid">
        
        <!--First Column - To change progress value make sure to adjust bar width and field value to the same amount-->
        <div class="span4">
          <h3><%= link_to "Flatiron Events", pages_calendar_path %></h3>
          <iframe src="https://www.google.com/calendar/embed?showPrint=0&amp;height=400&amp;wkst=1&amp;bgcolor=%23ffffff&amp;src=flatironschool.com_h11vtl9a3a6sc4fj04h64mc97k%40group.calendar.google.com&amp;color=%23865A5A&amp;ctz=America%2FNew_York" style=" border-width:0 " width="300" height="400" frameborder="0" scrolling="no"></iframe>
        </div>

        <!--Second Column-->
        <div class="span4">
          <h3><%= link_to "The Latest from Former Students", alumni_path %></h3>
          <a class="twitter-timeline" width="300" height="400" data-dnt="true" href="https://twitter.com/FlatironSchool/ruby-003" data-widget-id="403614912368218112">Tweets from https://twitter.com/FlatironSchool/ruby-003</a>
          <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
        </div>

        <!--Third Column-->
        <div class="span4">
          <h3><%= link_to "Projects from our Alumni", projects_path %></h3>
          <%= render 'projects/recent_projects_widget' %>
        </div>
                
      </div>
    </div>
  </section>  
  
  <!--Message Section-->
  <section id="message">
    <div class="container">
      <div class="row-fluid">
        <div class="span12 text-center">
          <h2>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Us neque, sed blandit ante. Integer eget massa blandit ante.</h2>
        </div>
      </div>
    </div>
  </section>
  
  
  <!--Clients Section-->
  <section id="team">
  <div class="image-break"> </div>
    <div class="container">
      
      <div class="row-fluid">
        <div class="span12">
          <h2>Recent Additions</h2>
        </div>
      </div>
      
      <div class="row-fluid">
        
        <% @users.each do |user| %>
        <!--Alumnus Profile-->
        <div class="span3">
          <!-- <img src="img/team1.jpg" alt="Title"> -->
          <%= image_tag user.profile_image, alt: user.name, size: "300x260" %>
          <div class="title-box text-center">
            <p><%= user.name %> | <span class="dark-gray"><em><%= user.current_employer %></em></span></p>
          </div>
          
          <ul class="team-social-icons text-center">
              <li><a class="twitter" href="<%= user.twitter %>" target="_blank"><i class="icon-twitter icon-large"></i></a></li>
              <li><a class="facebook" href="<%= user.github %>" target="_blank"><i class="icon-github icon-large"></i></a></li>
              <li><a class="instagram" href="<%= user.blog_url %>.com" target="_blank"><i class="icon-rss icon-large"></i></a></li>
              <li><a class="linkedin" href="<%= user.linkedin %>" target="_blank"><i class="icon-linkedin icon-large"></i></a></li>
          </ul> 
        </div>
        <% end %>
        
      </div>
    </div>
  </section>
  
  
<%= render 'shared/bottom_section' %>