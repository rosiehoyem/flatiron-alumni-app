
        <!--Main Content-->
  <section id="content" class="sign-up-page">
    <div class="container">
      <div class="row-fluid">
        
        <div class="well span6 offset3 text-center sign-up">
          <!-- <form id="signup" class="form-horizontal" method="post" action="#"> -->
          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), class: "form-horizontal") do |f| %>
  				<%= devise_error_messages! %>
        <h2>Sign Up</h2>

        <p><%= link_to "Sign Up with LinkedIn", main_app.user_omniauth_authorize_path(:linkedin) %></p>
        
        <div class="control-group">
          <div class="controls">
              <div class="input-prepend">
               <span class="add-on"><i class="icon-user"></i></span>
              <!-- <input type="text" class="input-xlarge" id="firstname" name="firstname" placeholder="First Name"> -->
              <%= f.text_field :firstname, :autofocus => true, class: "input-xlarge", placeholder: "First Name" %>
            </div>
          </div>
        </div>
        
        <div class="control-group ">
          <div class="controls">
              <div class="input-prepend">
            <span class="add-on"><i class="icon-user"></i></span>
              <!-- <input type="text" class="input-xlarge" id="lastname" name="lastname" placeholder="Last Name"> -->
              <%= f.text_field :lastname, class: "input-xlarge", placeholder: "Last Name" %>
            </div>
          </div>
        </div>
        
        <div class="control-group">
          <div class="controls">
              <div class="input-prepend">
            <span class="add-on"><i class="icon-envelope"></i></span>
              <!-- <input type="text" class="input-xlarge" id="email" name="email" placeholder="Email"> -->
              <%= f.email_field :email, class: "input-xlarge", placeholder: "Email" %>
            </div>
          </div>
        </div>

        <% if f.object.password_required? %>

        <div class="control-group">
          <div class="controls">
              <div class="input-prepend">
            <span class="add-on"><i class="icon-lock"></i></span>
              <!-- <input type="Password" id="password" class="input-xlarge" name="password" placeholder="Password"> -->
              <%= f.password_field :password, class: "input-xlarge", placeholder: "Password" %>
            </div>
          </div>
        </div>
        
        <div class="control-group">
          <div class="controls">
              <div class="input-prepend">
            <span class="add-on"><i class="icon-lock"></i></span>
              <!-- <input type="Password" id="confirm-password" class="input-xlarge" name="confirm-password" placeholder="Re-enter Password"> -->
              <%= f.password_field :password_confirmation, class: "input-xlarge", placeholder: "Re-enter Password" %>
            </div>
          </div>
        </div>

    		<div> Employer? 
    			<%= select_tag "emp", options_for_select([ "Yes", "No" ], "No") %>
    		</div><br>
				<% end %>
    
        <div class="control-group">
            <div class="controls">
             <!-- <button type="submit" class="m-btn"><i class="icon-user"></i> Create My Account</button> -->
              <div><%= f.submit "Sign up", class: "m-btn" %></div>
							
            </div>
            <small><%link_to "Already Registered?", new_user_session_path, class: "small-message"%></small>
        </div>

        <!-- </form> -->
        <% end %>

        </div><!--End Span6-->
      </div><!--End Row-->
    </div><!--End Container-->
   </section>  
    
