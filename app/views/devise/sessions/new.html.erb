<!--Main Content-->
  <section id="content" class="sign-up-page">
    <div class="container">
      <div class="row-fluid">
        
        <div class="well span6 offset3 text-center sign-up">
          <!-- <form id="signup" class="form-horizontal" method="post" action="#"> -->
          <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), class: "form-horizontal") do |f| %>
	    		<h2>Log In</h2>
	    		<p><%= link_to "Sign in with LinkedIn", main_app.user_omniauth_authorize_path(:linkedin) %></p>
    		
  
    		<div class="control-group">
    			<div class="controls">
    			  <div class="input-prepend">
    				<span class="add-on"><i class="icon-envelope"></i></span>
    					<!-- <input type="text" class="input-xlarge" id="email" name="email" placeholder="Email"> -->
    					<%= f.email_field :email, :autofocus => true,  class: "input-xlarge", placeholder: "Email" %>
    				</div>
    			</div>
    		</div>
    		
    		<div class="control-group">
    			<div class="controls">
    			    <div class="input-prepend">
    				<span class="add-on"><i class="icon-lock"></i></span>
    					<!-- <input type="Password" id="passwd" class="input-xlarge" name="passwd" placeholder="Password"> -->
    					<%= f.password_field :password, class: "input-xlarge", placeholder: "Password" %>
    				</div>
    			</div>
    		</div>

    		  <% if devise_mapping.rememberable? -%>
				    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
				  <% end -%>
    		
    		<div class="control-group">
    	      <div class="controls">
    	       <button type="submit" class="m-btn"><i class="icon-signin"></i> Log In</button>
    	      </div>

    	      <a class="small-message" href="#"><small>Forgot Password?</small></a>
    	  </div>
    	  <% end %>
    	  <!-- </form> -->
    	  
        </div><!--End Span6-->
      </div><!--End Row-->
	  </div><!--End Container-->
   </section>  
    
