<section id="content">
  <div class="container">
    
    <div class="row-fluid">
      <div class="span12">
        <h1>Search Results</h1>

          <% @search.users.each do |user| %>
            <!--Alumnus Summary -->
          <div class="well well-sm">
            <div class="row-fluid blog-article">
              <div class="span7 offset1">
                <h2><%= user.name %></h2>
                <%= image_tag(user.profile_image, :size => "200x200", :alt => "Student Profile Image") %>
                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p><br />
                
                <p><%= link_to 'See Full Student Profile', user_path(user), class: "more" %></p>
              </div>

              <!--Right Side Bar-->
              <div class="span3 sidebar-container">
                <h3><%= user.current_employer %></h3>
                <p>Location: <%= user.location %></p>
                
                <h3>Links</h3>
                <ul class="unstyled blog-links">
                  <li><%= link_to "LinkedIn Profile", user.linkedin %></li>
                  <li><%= link_to "Github Repositories", user.github %></li>
                  <li><%= link_to "Twitter", user.twitter %></li>
                  <li><%= link_to user.blog_name, user.blog_url %></li>
                </ul>
              </div><!--End Single Alumnus Container-->
            </div>
            
          </div><!--End Span-->
          <% end %>
      </div>
    </div>
  </div>
</section>