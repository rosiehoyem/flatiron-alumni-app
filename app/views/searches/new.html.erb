<section id="content">
  <div class="container">
    
    <div class="row-fluid">
      <div class="span10 offset2">
      <h1>Advanced Search</h1>

        <%= form_for @search do |f| %>
        	<div class="field">
            <%= f.label :for_hire %>
            <%= f.select(:for_hire, [['NA', nil], ['Yes!', true], ['Not right now.', false]]) %>
          </div>
          <br />
          <div class="field">
            <%= f.label :keywords %>
            <%= f.text_field :keywords %>
          </div>
          <br />
          <div class="field">
            <%= f.label :location %>
            <%= f.text_field :location %>
          </div>
          <br />
            <div class="field">
            <%= f.label :experience %>
            <%= f.text_field :experience %>
          </div>
          <br />
          <div class="field">
            <%= f.label :skills %>
            <%= f.text_field :skills %>
          </div>
          <br />
          <div class="actions"><%= f.submit "Search", class: 'btn' %></div>
        <% end %>
      </div>
    </div>
  </div>
</section>
