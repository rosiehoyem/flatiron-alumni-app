    <div class="container">
      
      <div class="row-fluid">
        <div class="span12">
          <h2>Flatiron Projects</h2>
        </div>
      </div>

      <%= link_to 'Create a New Project', new_project_path %>
      
      <div class="row-fluid text-center">
            
        <!--Project Thumbnail (3 per row)-->
        <% @projects.each do |project| %>
        <div class="span4 thumbs">
          <!-- <img src="img/portfolio1.jpg" alt="Image Size 430x280"> -->
          <% if !project.attachment.blank? %> 
          <%= image_tag project.attachment_url(:thumb) %> 
          <% else %> 
          <%=image_tag("portfolio1.jpg", alt: "Image Size 430x280") %>
          <% end %> 
            <span class="title">
              <span><%= link_to project.name, project %></span>
            </span> 
        </div>
        <% end %>


      </div><!--End Row of Work-->      
      
    </div>
  </section>

