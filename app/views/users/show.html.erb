  <div class="well">
  	<h2><%= @user.name %></h2>
  	<div class="row">
			<div class="col-md-6">
				<h2><%= image_tag(@user.profile_image, :size => "200x200", :alt => "Student Profile Image") %><h2>
					<p>Employment Status</p>
        <h3><%= @user.current_employer %></h3>
        <p>Location: <%= @user.location %></p>
     	</div>
			<div class="col-md-6">
				<h4>Info:</h4>
            <p><%= link_to "LinkedIn Profile", @user.linkedin %></p>
            <p><%= link_to "Github Repositories", @user.github %></p>
            <p><%= link_to "Twitter", @user.twitter %></p>
            <p><%= link_to @user.blog_name, @user.blog_url %></p>
			</div>
		</div>
		<div class="panel panel-default">
		  <div class="panel-heading">
		    <h3 class="panel-title">Project Contributions</h3>
		  </div>
		  <div class="panel-body">
		    <% @user.project_contributors.each do |project_contributor| %>
		    	<p><strong><%= link_to project_contributor.project.name, project_path(project_contributor.project) %>:   </strong>
		    	<%= project_contributor.contribution %></p>
		    	<% end %>
		  </div>
		</div>
