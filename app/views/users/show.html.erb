
<!--Content Section One-->
  <section id="blog">
    <div class="container">
      
      <div class="row-fluid">
          
        <!--Blog Article Container-->
        <div class="span12 article-container">
          
          <!--Alumnus Summary -->
          <div class="well well-sm">
            <div class="row-fluid blog-article">
              <div class="span7 offset1">
                <h2><%= @user.name %></h2>
								<% if !@user.attachment.blank? %>
                <%= image_tag @user.attachment_url(:thumb) %>
                <% else %>  
                <%= image_tag(@user.profile_image, :size => "200x200", :alt => "Student Profile Image") %>
                <% end %> 
                <h6> <%= link_to 'edit profile', edit_user_path(@user) %> </h6>
                <% if !@user.bio.blank? %> 
                <%= @user.bio %> 
                <% else %> 
                <p><%= @user.firstname %> hasn't provided us with additional details yet, but we can vouch for their love of Rails.</p><br />
                <% end %> 
              </div>

              <!--Right Side Bar-->
              <div class="span3 sidebar-container">
                <h3><%= @user.current_employer %></h3>
                <p>Location: <%= @user.location %></p>
                
                <h3>Links</h3>
                <ul class="unstyled blog-links">
                  <li><%= link_to "LinkedIn Profile", @user.linkedin %></li>
                  <li><%= link_to "Github Repositories", @user.github %></li>
                  <li><%= link_to "Twitter", @user.twitter %></li>
                  <li><%= link_to @user.blog_name, @user.blog_url %></li>
                </ul>
              </div>
              <div class="row-fluid blog-article">
	              <div class="span10 offset1">
	              	<h3>Project Contributions</h3>
									<table class="table table-striped">
									  <thead>
									    <tr>
									      <th>Project Name</th>
									      <th>Contribution</th>
									    </tr>
									  </thead>
									  <tbody>
									  	<% @user.project_contributors.each do |project_contributor| %>
									    <tr>
									      <td><strong><%= link_to project_contributor.project.name, project_path(project_contributor.project) %></strong></td>
									      <td><%= project_contributor.contribution %></td>
									    </tr>
									    <% end %>
									  </tbody>
									</table>
								</div>
							</div>
						</div>
          </div><!--End Span-->
        </div>

      </div>
    </div>
  </section>
