<div class="well">
  <%= link_to "Search Students", pages_search_path %>
</div>

<h2>All Studets</h2>
    <% @users.each do |user| %>
      <div class="well">
      	<h3><%= user.name %></h3>
      	<div class="row">
  				<div class="col-md-6">
  					<h2>< image_tag(user.image) ><h2>
		        <h3>< user.current_employer ></h3>
		        <p>Location: <%= user.location %></p>
         	</div>
  				<div class="col-md-6">
  					<h4>Info:</h4>
  					<p>LinkedIn: <%= user.linkedin %></p>
  					<p>Blog: < user.blog ></p>
  					<p>Github: <%= user.github %></p>
  					<p>Twitter: <%= user.twitter %></p>
  				</div>
        <p><%= link_to 'Show', user_path(user) %></p>
      	</div>
      </div>
    <% end %>
