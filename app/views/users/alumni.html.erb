<div class="well">
  <strong>Search Students by Name: </strong>
  <% form_tag users_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
  <% end %>
  <p><%= link_to "Advanced Search", new_search_path %></p>
</div>

<h2>All Students</h2>
    <% @users.each do |user| %>
      <div class="well">
      	<h3><%= user.name %></h3>
      	<div class="row">
  				<div class="col-md-6">
  					<%= image_tag(user.profile_image, :size => "200x200", :alt => "Student Profile Image") %>
            <p>Employment Status</p>
		        <h3><%= user.current_employer %></h3>
		        <p>Location: <%= user.location %></p>
         	</div>
  				<div class="col-md-6">
  					<h4>Info:</h4>
            <p><%= link_to "LinkedIn Profile", user.linkedin %></p>
            <p><%= link_to "Github Repositories", user.github %></p>
            <p><%= link_to "Twitter", user.twitter %></p>
            <p><%= link_to user.blog_name, user.blog_url %></p>
  				</div>
        <p><%= link_to 'See Full Student Profile', user_path(user), class: "btn btn-lg" %></p>
      	</div>
      </div>
    <% end %>
