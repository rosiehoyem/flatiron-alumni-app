 <section id="content">
    <div class="row-fluid">
        <div class="span12">

<div class="row-fluid">
  <div class="span1">
  </div>
  <div class="span6">
  <h1>Replying  to: <%= @forum.title %> </h1><br>
   <% text = @forum.content %>
  <% if text.length > 90 %>
      <%= text[0, 90] %>...
  <% else %>
       <%= text %>
  <% end %>
 
 <br>
</div>
<div class="span 7">
</div>
</div> <!ends first row> 

<div class="row-fluid">
  <div class="span1">
  </div>
 
  
<%= form_for(@reply) do |f| %>
  <div class="span6">

  <%= f.text_area :content, :placeholder =>"Your Reply", style: "width:550px; height:250px;" %>

</div>
  <div class="span7">
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :forum_id, :value => @forum.id %>
  </div>
</div>




<div class="row-fluid">
  <div class="span1">
  </div>
  
  <div class="span6">

  <%= f.submit "Reply", class: "btn-dark-sm" %>  <%= link_to 'Back', forums_path, class: "btn-dark-sm" %>  
</div>
  <div class="span5">
    
  </div><div class="span2">
  </div>
</div>


  
<% end %>


</div>
</div>
</section>




