

Replying  to:<br>
<%= @forum.title %><br><br>
<%= form_for(@reply) do |f| %>
  <%= f.text_area :content, size: "40x5", :placeholder =>"Your Reply" %><br><br>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.hidden_field :forum_id, :value => @forum.id %>

  <div class="actions">
    <%= f.submit "Reply" %>
  </div>
<% end %>


