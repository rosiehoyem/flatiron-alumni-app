  <%= form_for(@job) do |f| %>
    <div class="row-fluid">    
      <div class="control-group">  
        <div class="controls">   
        </div>  
      </div>  
      <div class="control-group">  
        <div class="controls"> 
        <h4>Job Title:</h4> 
        <%= f.text_field :title, placeholder: "Job Title", value: @job.title, style: "width:550px;" %>
        </div>  
      </div>
      <div class="control-group">  
        <div class="controls"> 
        <h4>Company:</h4> 
        <%= f.text_field current_user[:company], value: current_user.company, style: "width:550px;" %>
        </div>  
      </div>
      <div class="control-group">  
        <div class="controls"> 
         <h4>Description:</h4>    
          <%= f.text_area :description, placeholder: "Description", style: "width:550px; height:250px;" %><br>
        </div>  
      </div>
      <div class="control-group">  
        <div class="controls"> 
   
        <%= f.hidden_field :user_id, :value => current_user.id %>

       <h4>Application Deadline:</h4>
        <%= f.date_select :deadline %><br>
        </div>  
      </div>

      <div class="control-group">  
        <div class="controls">
     
        <%= f.hidden_field :user_id, :value => current_user.id %>
        <h4>Contact Email:</h4>    
        <%= f.text_field :contact, value: current_user.email, style: "width:550px;" %><br>
        </div>  
      </div>

      <div class="control-group">  
        <div class="controls">
        <br> <%= f.submit "submit", class: "btn-dark-sm"  %> <%= link_to 'Back', jobs_path, class: "btn-dark-sm"  %>
        </div>
      </div>       
    </div>
  <% end %>

