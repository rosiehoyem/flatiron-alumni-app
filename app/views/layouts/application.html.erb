<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Flatiron Alumni App</title>
    <meta name="keywords" content="made with bootstrap, wrap bootstrap themes, bootstrap agency theme, creative bootstrap sites, Agency11 theme, responsive bootstrap theme, mobile website themes, bootstrap portfolio, theme armada">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
    <link rel='stylesheet' id='google_merriweather-css'  href='http://fonts.googleapis.com/css?family=Merriweather:400,700&ver=3.5' type='text/css' media='all' />
  </head>
    
  <body>
        
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <%= link_to image_tag("whitelogo.gif", alt: "Flatiron School", class: "brand"), root_path %>
        <div class="nav-collapse collapse">
          <ul class="nav pull-right">
            <% if current_user  && current_user.employer == false %>
              <li class="menu-item">
                <%= link_to "Dashboard", main_app.pages_dashboard_path %>
              </li>
              <li>
                <%= link_to "Calendar", main_app.pages_calendar_path %>
              </li>
              <li>
                <%= link_to "Forum", forums_path %>
              </li>
              <li class="menu-item">
                <%= link_to "Jobs", jobs_path %>
              </li>
               <li>
                 <%= link_to "Projects", main_app.projects_path %>
              </li>
              <li>
                <%= link_to "Alumni", main_app.alumni_path %>
              </li>

              <% elsif current_user && current_user.employer == true %>
               <li class="menu-item">
                <%= link_to "Dashboard", employer_path %>
              </li>
               <li>
                  <%= link_to "Browse Projects", main_app.projects_path %>
              </li>
              <li>
                <%= link_to "Post A Job", new_job_path %>
              </li>
              <li>
                <%= link_to "View Profile", show_employer_profile_path(current_user) %>
              </li>
              <% end %>


            <% if user_signed_in? %>
            <li> 
              <%= link_to "Logout", logitout_path %> 
            </li>
            <% else %>
            <li> 
              <%=  link_to raw("<i class=\"icon-user\"></i> Login"),main_app.new_user_session_path %>            
            </li>
            <li>
              <%= link_to "Sign up", main_app.new_user_registration_path %>
            </li>
            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  </div>

<!--   <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>  -->

    <%= yield %>


  <section id="footer">
    <div class="container">
      <div class="row-fluid">
        <div class="span4 text-left copyright">
          <p>&copy; 2013. The Flatiron School.  <a href="http://nytm.org/made-in-nyc" target="_blank"> Made in NYC</a></p><br />
        </div>
        
        <div class="span8 text-right">
          <ul class="footer-links">
            <li><a href="http://flatironschool.com/" target="_blank">Flatiron School Website</a></li>
          </ul>
        </div>
      </div>
    </div>
  </section>
  
    <!-- Javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="js/jquery-1.9.1.min.js"><\/script>')</script>
    <script>
      !function ($) {
        $(function(){
          $('#header').carousel()
        })
      }(window.jQuery)
    </script>
   
  </body>
</html>
